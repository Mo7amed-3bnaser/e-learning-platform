{
  "name": "e-learning-backend",
  "version": "1.0.0",
  "description": "Backend API for E-Learning Platform",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "create-admin": "node scripts/createAdmin.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose --forceExit --detectOpenHandles",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose --forceExit --testPathPatterns=tests/unit",
